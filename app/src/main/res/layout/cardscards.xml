<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/layout"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.example.testlogin.hearthstonesound.Cardscards"
    android:background="@mipmap/backgroundhearth">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textViewCardName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnSnd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Призыв"
        android:onClick="clickBtnSnd1"
        android:layout_alignBaseline="@+id/btnSnd2"
        android:layout_alignBottom="@+id/btnSnd2"
        android:background="@drawable/button_primary_selector"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/Animation.AppCompat.DropDownUp"
        android:textColor="#ff8b4500"
        android:textColorHighlight="#ff8b4500"
        android:textColorHint="#ff8b4500"
        android:textColorLink="#ff8b4500"
        android:textStyle="bold"
        android:textSize="19sp" />

    <Button
        android:id="@+id/btnSnd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Атака"
        android:onClick="clickBtnSnd2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginBottom="69dp"
        android:background="@drawable/button_primary_selector"
        style="@style/Animation.AppCompat.DropDownUp"
        android:layout_toRightOf="@+id/btnSnd3"
        android:layout_toEndOf="@+id/btnSnd3"
        android:textColor="#ff8b4500"
        android:textColorHighlight="#ff8b4500"
        android:textColorHint="#ff8b4500"
        android:textColorLink="#ff8b4500"
        android:textStyle="bold"
        android:textSize="19sp"
        android:layout_alignParentStart="false" />

    <Button
        android:id="@+id/btnSnd3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Смерть"
        android:onClick="clickBtnSnd3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_primary_selector"
        style="@style/Animation.AppCompat.DropDownUp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:textColor="#ff8b4500"
        android:textColorHighlight="#ff8b4500"
        android:textColorHint="#ff8b4500"
        android:textColorLink="#ff8b4500"
        android:textStyle="bold"
        android:textSize="19sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnSnd1" />
</RelativeLayout>
